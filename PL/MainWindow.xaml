<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
         TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#DEDBD2">
        <Button x:Name="enterListSystem" Background="#FFB0C4B1" Content="Enter" Margin="244,166,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="74" Width="263" FontSize="36" Foreground="#4A5759" FontFamily="Showcard Gothic" Click="enterListSystem_Click" BorderBrush="#FF4A5759">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.572"/>
                    <RotateTransform Angle="0.059"/>
                    <TranslateTransform X="0.001" Y="-0.918"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <StackPanel Margin="10,0,-10,-1"/>
    </Grid>
</Window>
